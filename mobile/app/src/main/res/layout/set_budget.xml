<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_budget_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Item Spinner with Add Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_label"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/spinner_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btn_add_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Initial Budget -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_initial_budget_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initial_budget_label"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/et_initial_budget_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="$0.00"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btn_set_initial_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_button"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Remaining Budget -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tv_remaining_budget_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remaining_budget_label"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/et_remaining_budget_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="$0.00"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btn_set_remaining_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_button"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Reset Button -->
    <Button
        android:id="@+id/btn_reset_to_initial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_to_initial_button"/>
</LinearLayout>