<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Mobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- DatePicker dialog button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.DialogButton</item>
    </style>
</resources>